@model IEnumerable<HRMSModels.HolidayModel>


<div class="normal-card">
    <header class="normal-card-header">

        Upcoming Holidays
    </header>
    <div class="normal-card-body">

        @foreach (var item in Model)

        {
            <div class="text-with-sub-text">
                <div class="shape circle bg-light-green"></div>
                <div class="text">
                    <div class="main-text">

                        @Html.DisplayFor(modelItem => item.HolidayDate)
                    </div>
                    <div class="sub-text">

                        @Html.DisplayFor(modelItem => item.HolidayName)
                    </div>
                </div>
            </div>

        }
    </div>
</div>
