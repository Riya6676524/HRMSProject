@model HRMSModels.LeaveBalanceModel


<div class="normal-card">
    <div class="normal-card-body balance-card">
        <h3>
            Balance Amount:
        </h3>
        <div id="CurrentBalance">
            @Html.DisplayFor(model => model.ClosingBalance)
        </div>
        @Html.ActionLink("Balance History", "LeaveBalanceGridPartial", new {empID=Model.Emp_ID})
    </div>
</div>

<style>
    .balance-card {
        padding: 16px;
        background-color: #ffffff;
        border-radius: 8px;
    }

        .balance-card h3 {
            margin-bottom: 12px;
            color: #333;
            border-bottom: 1px solid #e0e0e0;
            padding-bottom: 6px;
        }

        .balance-card #CurrentBalance {
            color: #2e8b57;
            font-weight: bold;
            margin-bottom: 12px;
        }

        .balance-card a {
            display: inline-block;
            padding: 6px 12px;
            background-color: #007bff;
            color: #fff;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            .balance-card a:hover {
                background-color: #0056b3;
            }


</style>