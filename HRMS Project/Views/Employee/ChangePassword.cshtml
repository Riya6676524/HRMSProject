@model HRMSModels.EmployeeProfileModel
@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title> Change Password</title>
    <link href="~/Content/ChangePassword.css" rel="stylesheet" />
</head>
<body>
    <div class="changepassword-box">
        <h2>Change Password</h2>


        @using (Html.BeginForm())
        {
            <div class="input-group">
                <i class="fa fa-lock"></i>
                @Html.PasswordFor(m => m.currpassword, new { @placeholder = "Current Password" })

            </div>
            <div class="input-group">
                <i class="fa fa-lock"></i>
                @Html.PasswordFor(m => m.newpassword, new { @placeholder = "New Password" })

            </div>

            <div class="input-group">
                <i class="fa fa-lock"></i>
                @Html.PasswordFor(m => m.confirmNewPassword, new { @placeholder = "Confirm New Password" })

            </div>

            <div class="warning">
                @if (TempData["Error"] != null)
                {

                    @TempData["Error"]

                }
                @Html.ValidationMessageFor(m => m.currpassword, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(m => m.newpassword, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(m => m.confirmNewPassword, "", new { @class = "text-danger" })
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @if (TempData["Message"] != null)
                {
                    <span style="color: green; display: block;">
                        @TempData["Message"]
                    </span>
                }
            </div>

            <br />
            <div style="display:flex; justify-content:space-evenly" ;> 
            <input type="submit" value="Change Password" class="btn" />
            <div class="btn cancle-btn">
                @Html.ActionLink("Cancle", "Profile", "Employee")
            </div>
                </div>
        }

    </div>
</body>
</html>


